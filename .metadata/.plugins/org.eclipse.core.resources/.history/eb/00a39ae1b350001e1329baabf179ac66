import java.util.Scanner;

public class MatrizExercicioResolvido {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		int[][] matriz = new int[n][n]; //a quantidade de colchetes informa que Ã© uma matriz bidimensional
		
		for (int i=0; i<n; i++) { //for para percorrer as linhas
			for (int j=0; j<n; j++) { //for para percorrer as colunas
				matriz[i][j] = sc.nextInt();
			}
		}
		
		System.out.println("Main diagonal:");
		for (int i=0; i<n; i++) {
			System.out.print(matriz[i][i] + " " );
		}
		
		int contador = 0;
		System.out.println("Negative numbers = ");
		for (int i=0; i<n; i++) {
			for (int j =0; j<n; j++) {
				if (matriz[i][j] < 0) {
					contador++;
				}
			}
		}
		System.out.println(" ");
		System.out.print(contador);
		
		sc.close();
	}

}
